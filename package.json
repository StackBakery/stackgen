{
  "name": "workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "pdkit": "ts-node packages/@pdkit/cli/src/pdkit.ts"
  },
  "files": [
    "dist/*.js",
    "dist/**/*.js",
    "dist/*.d.ts",
    "dist/**/*.d.ts"
  ],
  "license": "Apache-2.0",
  "author": {
    "name": "Justin McCormick",
    "email": "me@justinmccormick.com",
    "organization": true
  },
  "devDependencies": {
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "json-schema": "^0.4.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "extends": [
      "plugin:import/typescript",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "node": {},
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "ignorePatterns": [
      "*.js",
      "*.d.ts",
      "node_modules/",
      "*.generated.ts",
      "coverage"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-shadow": [
        "error"
      ],
      "@typescript-eslint/no-floating-promises": [
        "error"
      ],
      "@typescript-eslint/return-await": [
        "error"
      ],
      "@typescript-eslint/member-ordering": [
        "error",
        {
          "default": [
            "public-static-field",
            "public-static-method",
            "protected-static-field",
            "protected-static-method",
            "private-static-field",
            "private-static-method",
            "field",
            "constructor",
            "method"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [],
          "optionalDependencies": false,
          "peerDependencies": true
        }
      ],
      "import/no-unresolved": [
        "error"
      ],
      "import/order": [
        "warn",
        {
          "groups": [
            "builtin",
            "external"
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-shadow": [
        "off"
      ],
      "key-spacing": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error"
      ],
      "no-return-await": [
        "off"
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "dot-notation": [
        "error"
      ],
      "no-bitwise": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          "pdk.ts"
        ],
        "rules": {
          "@typescript-eslint/no-require-imports": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "tsconfig.json"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "reporters": [
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ]
  },
  "dependencies": {
    "@pdkit/nodejs": "^0.0.0",
    "mustache": "^4.2.0"
  },
  "workspaces": [
    "packages/@pdkit/core",
    "packages/@pdkit/cli",
    "packages/@pdkit/nodejs",
    "packages/@pdkit/github"
  ]
}
