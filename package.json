{
  "name": "workspace",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "author": {
    "name": "Justin McCormick",
    "email": "me@justinmccormick.com"
  },
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "pdkit": "yarn workspace @pdkit/cli run pdkit",
    "build": "yarn compile",
    "compile": "yarn workspaces foreach --verbose -p --topological-dev --no-private run compile",
    "clean": "yarn workspaces foreach --verbose -p --topological-dev --no-private run clean",
    "yalc": "yarn workspaces foreach --verbose -p --topological-dev --no-private run yalc",
    "lint": "eslint --ext .ts --fix --no-error-on-unmatched-pattern src",
    "release": "npx multi-semantic-release"
  },
  "files": [
    "dist/*.js",
    "dist/**/*.js",
    "dist/*.d.ts",
    "dist/**/*.d.ts"
  ],
  "workspaces": [
    "packages/@pdkit/core",
    "packages/@pdkit/cli",
    "packages/@pdkit/nodejs",
    "packages/@pdkit/github"
  ],
  "dependencies": {
    "@pdkit/core": "workspace:packages/@pdkit/core",
    "@pdkit/github": "workspace:packages/@pdkit/github",
    "@pdkit/nodejs": "workspace:packages/@pdkit/nodejs",
    "mustache": "4.2.0"
  },
  "devDependencies": {
    "@pdkit/cli": "1.5.1",
    "@pdkit/core": "1.4.1",
    "@pdkit/github": "1.3.1",
    "@pdkit/nodejs": "1.3.1",
    "@qiwi/multi-semantic-release": "^3.17.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/mustache": "4.1.2",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "2.7.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-junit": "^13",
    "json-schema": "0.4.0",
    "prettier": "2.6.1",
    "semantic-release": "^17.4.6",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "resolutions": {
    "chalk": "^4.1.2",
    "npm": "^6"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "extends": [
      "plugin:import/typescript",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "node": {},
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "ignorePatterns": [
      "*.js",
      "*.d.ts",
      "node_modules/",
      "*.generated.ts",
      "coverage"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-shadow": [
        "error"
      ],
      "@typescript-eslint/no-floating-promises": [
        "error"
      ],
      "@typescript-eslint/return-await": [
        "error"
      ],
      "@typescript-eslint/member-ordering": [
        "error",
        {
          "default": [
            "public-static-field",
            "public-static-method",
            "protected-static-field",
            "protected-static-method",
            "private-static-field",
            "private-static-method",
            "field",
            "constructor",
            "method"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [],
          "optionalDependencies": false,
          "peerDependencies": true
        }
      ],
      "import/no-unresolved": [
        "error"
      ],
      "import/order": [
        "warn",
        {
          "groups": [
            "builtin",
            "external"
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-shadow": [
        "off"
      ],
      "key-spacing": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error"
      ],
      "no-return-await": [
        "off"
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "dot-notation": [
        "error"
      ],
      "no-bitwise": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          ".pdkitrc.ts"
        ],
        "rules": {
          "@typescript-eslint/no-require-imports": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "reporters": [
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "parserOpts": {
            "noteKeywords": [
              "BREAKS",
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BACKWARDS COMPAT",
              "BACKWARDS COMPATIBILITY"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changeLogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "yarn npm publish"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "YARN_ENABLE_IMMUTABLE_INSTALLS=false yarn run -T pdkit synth"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
